---
import Link from "@/components/links/Link.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout
  title="Page Not Found"
  description="The page you are looking for does not exist."
>
  <div class="container flex-layout column justify-center gap">
    <h1>404</h1>
    <p class="subtitle">The page you are looking for does not exist.</p>
    <Link
      variant="secondary"
      href="/"
      class="go-home-link"
      text="Go to Main Page"
    />
  </div>
</BaseLayout>

<style>
  .container {
    height: 100%;
    flex-grow: 1;
    align-items: start;
  }

  .subtitle {
    margin-bottom: var(--space-md);
  }
</style>
