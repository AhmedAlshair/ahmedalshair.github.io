---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import {
  ICONS,
  JobTitle,
  MetaDescription,
  SitePublicUrl,
} from "@/utils/Constants.astro";
import "@styles/global.css";

interface Props {
  title: string;
  description?: string;
  class?: string;
}

const { title = "Ahmed Alshair", description, class: className } = Astro.props;
let sortedIcons = ICONS.sort().join(",");

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL("/assets/og-image.jpg", Astro.site);

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Ahmed Alshair",
  jobTitle: JobTitle,
  url: SitePublicUrl,
  sameAs: [
    "https://linkedin.com/in/ahmedalshair",
    "https://behance.net/AhmedAlshair",
    "https://dribbble.com/AhmedAlshair",
    "https://github.com/ahmedalshair",
    "https://twitter.com/ahmedalshair",
  ],
  description: MetaDescription,
  knowsAbout: [
    "Product Strategy",
    "User Experience Design",
    "User Interface Design",
    "Frontend Development",
    "React",
    "Astro",
    "Svelte",
    "Typescript",
    "Javascript",
    "HTML",
    "CSS",
  ],
  knowsLanguage: ["en", "ar"],
  image: `${SitePublicUrl}/assets/ahmed-alshair-photo.jpg`,
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <title>{title}</title>
    {
      description && (
        <meta name="description" content={description || MetaDescription} />
      )
    }

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:alt" content=`Ahmed Alshair | ${JobTitle}` />

    <!-- Twitter / X -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />
    <meta property="twitter:image:alt" content=`Ahmed Alshair | ${JobTitle}` />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#172c4f" />

    <link
      href="https://fonts.googleapis.com/css2?family=Hanken+Grotesk:ital,wght@0,100..900;1,100..900&family=Space+Grotesk:wght@300..700&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <link
      href=`https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=${sortedIcons}`
      rel="stylesheet"
    />
    <script is:inline>
      const theme =
        localStorage.getItem("theme") ||
        (window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light");
      document.documentElement.setAttribute("data-theme", theme);
    </script>
  </head>

  <body id="root" class={className}>
    <Header />
    <main class="container padded flex-layout column">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex-grow: 1;
    min-height: 100%;
  }
</style>

<script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
